<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head') %>
    <style>
        /* --- ใช้ Theme เดียวกับ Hero แต่ปรับแต่งนิดหน่อย --- */
        body { background-color: #0f0f0f; overflow: hidden; font-family: 'Segoe UI', sans-serif; color: #e0e0e0; }
        .codex-layout { display: flex; height: 100vh; padding-top: 64px; }
        ::-webkit-scrollbar { width: 6px; height: 6px; }
        ::-webkit-scrollbar-track { background: #1a1a1a; }
        ::-webkit-scrollbar-thumb { background: #444; border-radius: 3px; }

        /* Navbar */
        .navbar-modern {
            height: 64px; background: rgba(18, 18, 18, 0.95); backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            position: fixed; top: 0; left: 0; right: 0; z-index: 1050;
            padding: 0 20px; display: flex; align-items: center; justify-content: space-between;
        }
        .nav-brand-text { font-weight: 700; color: #fff; font-size: 1.1rem; }
        .nav-btn {
            background: rgba(255, 255, 255, 0.05); color: #ccc; border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 6px 16px; border-radius: 20px; font-size: 0.85rem; text-decoration: none;
            display: inline-flex; align-items: center; gap: 6px; transition: 0.2s;
        }
        .nav-btn:hover { background: rgba(255, 255, 255, 0.1); color: #fff; }

        /* Sidebar (Groups) */
        .sidebar-panel { width: 280px; background: #161616; border-right: 1px solid #333; display: flex; flex-direction: column; flex-shrink: 0; }
        .sidebar-header { padding: 15px; border-bottom: 1px solid #444; display: flex; justify-content: space-between; align-items: center; }
        .group-list { overflow-y: auto; flex: 1; padding: 10px; }
        .group-item { 
            display: flex; justify-content: space-between; align-items: center; padding: 12px 15px; 
            margin-bottom: 4px; cursor: pointer; border-radius: 6px; color: #bbb; text-decoration: none; border-left: 3px solid transparent; 
        }
        .group-item:hover { background: #252525; color: #fff; padding-left: 20px; }
        /* ใช้สีเขียว (Success) สำหรับ Pet เพื่อให้ต่างจาก Hero (Warning/Yellow) */
        .group-item.active { background: #222; color: #198754; border-left-color: #198754; font-weight: 600; }
        .text-theme { color: #198754 !important; }
        .btn-theme { background-color: #198754; border-color: #198754; color: #fff; }
        .btn-theme:hover { background-color: #157347; border-color: #146c43; }
        .btn-outline-theme { color: #198754; border: 1px solid #198754; }
        .btn-outline-theme:hover { background: #198754; color: #fff; }

        /* Content */
        .content-panel { flex: 1; background: #121212; display: flex; flex-direction: column; overflow: hidden; }
        .top-tabs-bar { padding: 15px 20px; border-bottom: 1px solid #333; background: #181818; display: flex; gap: 10px; align-items: center; overflow-x: auto; flex-shrink: 0; }
        .cat-tab { padding: 6px 18px; border-radius: 20px; background: #252525; border: 1px solid #333; color: #ccc; text-decoration: none; white-space: nowrap; transition: 0.2s; }
        .cat-tab:hover { background: #333; color: #fff; }
        .cat-tab.active { background: rgba(25, 135, 84, 0.15); color: #198754; border-color: #198754; font-weight: bold; }

        /* Grid & Card */
        .hero-grid-container { flex: 1; overflow-y: auto; padding: 20px; }
        .hero-card {
            background: #1e1e1e; border: 1px solid #333; border-radius: 8px; transition: transform 0.2s; 
            position: relative; overflow: hidden; display: flex; flex-direction: column; align-items: center; padding: 15px; height: 100%;
        }
        .hero-card:hover { transform: translateY(-5px); border-color: #198754; box-shadow: 0 4px 15px rgba(0,0,0,0.3); }
        .hero-img { width: 100%; aspect-ratio: 3/4; object-fit: contain; border-radius: 4px; background: #121212; margin-bottom: 10px; }
        .hero-name { color: #fff; font-weight: 600; font-size: 0.95rem; margin-bottom: 8px; text-align: center; }

        /* Modal Styles */
        .modal-content { background-color: #1e1e1e; border: 1px solid #444; }
        .form-control { background-color: #000; color: #fff; border-color: #444; }
        .form-control:focus { background-color: #000; color: #fff; border-color: #198754; box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25); }
        .text-muted { color: #adadad !important; }
        .selectable-image { position: relative; border: 2px solid transparent; border-radius: 6px; overflow: hidden; background: #121212; aspect-ratio: 3/4; cursor: pointer; }
        .selectable-image img { width: 100%; height: 100%; object-fit: cover; opacity: 0.7; }
        .selectable-image:hover img { opacity: 1; }
        .selectable-image.selected { border-color: #198754; }
        .selectable-image.selected img { opacity: 1; }
        .img-name-overlay { display: none !important; } /* Hide Overlay */
    </style>
</head>
<body class="text-light">
    
    <nav class="navbar-modern">
        <div class="d-flex align-items-center gap-3">
            <img src="/images/about_website/logo_seven_knights_rebirth.png" alt="Logo" style="height: 40px;">
            <span class="nav-brand-text">7K Rebirth <span style="font-weight:400; opacity:0.7;">| Pet Codex</span></span>
        </div>
        <div class="d-flex align-items-center gap-3">
            <a href="/admin/dashboard" class="nav-btn"><i class="bi bi-grid-fill"></i> Dashboard</a>
            <a href="/admin/logout" class="nav-btn"><i class="bi bi-box-arrow-right"></i> Logout</a>
        </div>
    </nav>

    <div class="codex-layout">
        <div class="sidebar-panel">
            <div class="sidebar-header">
                <span class="fw-bold text-white"><i class="bi bi-collection me-2 text-theme"></i>Groups</span>
                <button class="btn btn-sm btn-outline-theme border-0" data-bs-toggle="modal" data-bs-target="#addGroupModal"><i class="bi bi-plus-lg"></i></button>
            </div>
            <div class="group-list">
                <% if(groups && groups.length > 0) { %>
                    <% groups.forEach(grp => { %>
                        <a href="/admin/codex/pet?cat_id=<%= activeCatId %>&group_id=<%= grp.id %>" 
                           class="group-item <%= activeGroupId == grp.id ? 'active' : '' %>">
                           <span><%= grp.name %></span>
                           <% if(activeGroupId == grp.id) { %> <i class="bi bi-chevron-right" style="font-size: 0.8rem;"></i> <% } %>
                        </a>
                    <% }) %>
                <% } else { %>
                    <div class="text-center mt-5 text-muted"><small>No groups found</small></div>
                <% } %>
            </div>
        </div>

        <div class="content-panel">
            <div class="top-tabs-bar">
                <span class="text-muted small fw-bold me-2">CATEGORIES:</span>
                <% if(categories && categories.length > 0) { %>
                    <% categories.forEach(cat => { %>
                        <a href="/admin/codex/pet?cat_id=<%= cat.id %>" class="cat-tab <%= activeCatId == cat.id ? 'active' : '' %>"><%= cat.name %></a>
                    <% }) %>
                <% } %>
                <button type="button" class="btn btn-sm btn-outline-theme rounded-circle ms-2" style="width:30px;height:30px;" data-bs-toggle="modal" data-bs-target="#addCategoryModal"><i class="bi bi-plus-lg"></i></button>
            </div>

            <div class="hero-grid-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <% const currentGroup = groups.find(g => g.id == activeGroupId); %>
                        <h3 class="m-0 text-white fw-bold"><%= currentGroup ? currentGroup.name : 'Select a Group' %></h3>
                    </div>
                    <% if(activeGroupId) { %>
                        <button class="btn btn-theme px-4 rounded-pill shadow-sm" onclick="openAddPetModal('<%= activeGroupId %>', '<%= currentGroup ? currentGroup.name : '' %>')">
                            <i class="bi bi-plus-lg me-1"></i> Add Pet
                        </button>
                    <% } %>
                </div>

                <div class="row g-3">
                    <% if(pets.length === 0) { %>
                        <div class="col-12 text-center py-5 text-muted" style="border: 2px dashed #333; border-radius: 10px;">
                            <h5>No pets in this group</h5>
                        </div>
                    <% } %>

                    <% pets.forEach(pet => { %>
                        <div class="col-6 col-sm-4 col-md-3 col-xl-2">
                            <div class="hero-card">
                                <img src="/images/pets/<%= pet.image_name %>" class="hero-img">
                                <div class="hero-name"><%= pet.name %></div>
                                <a href="/admin/codex/pet/delete/<%= pet.id %>?cat_id=<%= activeCatId %>&group_id=<%= activeGroupId %>" 
                                   class="btn btn-outline-danger btn-sm w-100 mt-auto" onclick="return confirm('Delete <%= pet.name %>?')">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addCategoryModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form action="/admin/codex/category/add" method="POST">
                    <input type="hidden" name="type" value="pet"> <div class="modal-body">
                        <label class="form-label text-muted small fw-bold">CATEGORY NAME</label>
                        <input type="text" name="name" class="form-control" required>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="submit" class="btn btn-theme px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addGroupModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form action="/admin/codex/group/add" method="POST">
                    <input type="hidden" name="type" value="pet"> <div class="modal-body">
                        <input type="hidden" name="category_id" value="<%= activeCatId %>">
                        <label class="form-label text-muted small fw-bold">GROUP NAME</label>
                        <input type="text" name="name" class="form-control" required>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="submit" class="btn btn-theme px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addPetModal" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-white">Add Pet to <span id="modalGroupName" class="text-theme fw-bold"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/codex/pet/add" method="POST">
                    <div class="modal-body row g-4">
                        <div class="col-lg-4 border-end border-secondary">
                            <input type="hidden" name="group_id" id="modalGroupId">
                            <input type="hidden" name="return_cat_id" value="<%= activeCatId %>">
                            <div class="mb-4 text-center">
                                <div id="previewSelected" class="d-flex align-items-center justify-content-center text-muted border border-secondary rounded bg-black mx-auto" style="width: 140px; aspect-ratio: 3/4;">
                                    <small>No Image</small>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">SELECTED FILE</label>
                                <input type="text" name="image_name" id="selectedImageInput" class="form-control form-control-sm text-theme fw-bold" readonly required>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="d-flex justify-content-between mb-3">
                                <label class="text-white fw-bold">Select Pet Image</label>
                                <input type="text" id="imgSearch" class="form-control form-control-sm text-white" style="width: 200px; background:#000; border-color:#333;" placeholder="Search..." onkeyup="filterImages()">
                            </div>
                            <div class="row g-2" style="max-height: 400px; overflow-y: auto;">
                                <% availablePetImages.forEach(img => { %>
                                     <div class="col-3 col-sm-3 col-md-2 img-item-col">
                                        <div class="selectable-image" onclick="selectImage(this, '<%= img %>')">
                                            <img src="/images/pets/<%= img %>" loading="lazy">
                                        </div>
                                   </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="submit" class="btn btn-theme px-5 fw-bold">Save Pet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>

    <script>
        function openAddPetModal(groupId, groupName) {
            document.getElementById('modalGroupId').value = groupId;
            document.getElementById('modalGroupName').innerText = groupName;
            document.getElementById('selectedImageInput').value = '';
            document.getElementById('previewSelected').innerHTML = '<small>No Image</small>';
            document.querySelectorAll('.selectable-image').forEach(el => el.classList.remove('selected'));
            new bootstrap.Modal(document.getElementById('addPetModal')).show();
        }

        function selectImage(el, filename) {
            document.querySelectorAll('.selectable-image').forEach(div => div.classList.remove('selected'));
            el.classList.add('selected');
            document.getElementById('selectedImageInput').value = filename;
            document.getElementById('previewSelected').innerHTML = `<img src="/images/pets/${filename}" style="width:100%; height:100%; object-fit:cover;">`;
        }

        function filterImages() {
            const input = document.getElementById('imgSearch').value.toLowerCase();
            const cols = document.getElementsByClassName('img-item-col');
            for (let col of cols) {
                const txt = col.querySelector('img').src.split('/').pop();
                col.style.display = txt.toLowerCase().includes(input) ? "" : "none";
            }
        }
    </script>
</body>
</html>